        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/queteFormDescription" />

    <Button
        android:id="@+id/button8"
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:layout_marginTop="148dp"
        android:text="D"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/queteFormDescription" />

    <AutoCompleteTextView
        android:id="@+id/queteFormCompetence"
        android:layout_width="236dp"
        android:layout_height="40dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/queteFormDescription" />

    <EditText
        android:id="@+id/queteFormDateDebut"
        android:layout_width="236dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/queteFormTextView7"
        app:layout_constraintTop_toBottomOf="@+id/queteFormCompetence" />

    <EditText
        android:id="@+id/queteFormDuree"
        android:layout_width="236dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:ems="10"
        android:hint="nombre de jour"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/queteFormTextView8"
        app:layout_constraintTop_toBottomOf="@+id/queteFormDateDebut" />

</android.support.constraint.ConstraintLayout>