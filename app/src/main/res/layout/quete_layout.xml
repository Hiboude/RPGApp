<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/footer">

    <ImageView
        android:id="@+id/imageQuete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/nomQuete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:text="Nom"
        app:layout_constraintStart_toEndOf="@+id/imageQuete"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreXp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="nbXp"
        app:layout_constraintStart_toEndOf="@+id/imageQuete"
        app:layout_constraintTop_toBottomOf="@+id/nomQuete" />

    <TextView
        android:id="@+id/nombrePiece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="nbPiece"
        app:layout_constraintStart_toEndOf="@+id/imageQuete"
        app:layout_constraintTop_toBottomOf="@+id/nombreXp" />

    <ImageButton
        android:id="@+id/supprimeQuete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:onClick="supprimeQuete"
        app:layout_constraintStart_toEndOf="@+id/nombrePiece"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />
</android.support.constraint.ConstraintLayout>